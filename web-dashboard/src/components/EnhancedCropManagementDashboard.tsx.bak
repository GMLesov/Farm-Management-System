        <Grid container spacing={3}>
          <Grid item xs={12}>
            <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center', mb: 2 }}>
              <Typography variant="h6">
                Task Management {selectedCrop && `- ${selectedCrop.name}`}
              </Typography>
              <Button
                variant="contained"
                startIcon={<Add />}
                onClick={() => setTaskDialogOpen(true)}
                disabled={!selectedCrop}
              >
                Add Task
              </Button>
            </Box>
          </Grid>

          {selectedCrop ? (
            <Grid item xs={12}>
              <Card>
                <CardContent>
                  <TableContainer>
                    <Table>
                      <TableHead>
                        <TableRow>
                          <TableCell>Task</TableCell>
                          <TableCell>Type</TableCell>
                          <TableCell>Priority</TableCell>
                          <TableCell>Status</TableCell>
                          <TableCell>Assigned Workers</TableCell>
                          <TableCell>Due Date</TableCell>
                          <TableCell>Actions</TableCell>
                        </TableRow>
                      </TableHead>
                      <TableBody>
                        {tasks.map((task) => (
                          <TableRow key={task.id}>
                            <TableCell>
                              <Typography variant="subtitle2">{task.title}</Typography>
                              <Typography variant="caption" color="text.secondary">
                                {task.description}
                              </Typography>
                            </TableCell>
                            <TableCell>
                              <Chip label={task.type} size="small" variant="outlined" />
                            </TableCell>
                            <TableCell>
                              <Chip
                                label={task.priority}
                                size="small"
                                sx={{ bgcolor: getPriorityColor(task.priority), color: 'white' }}
                              />
                            </TableCell>
                            <TableCell>
                              <Chip
                                label={task.status}
                                size="small"
                                color={task.status === 'completed' ? 'success' : 'default'}
                              />
                            </TableCell>
                            <TableCell>
                              <Badge badgeContent={task.assignedWorkers.length} color="primary">
                                <Groups />
                              </Badge>
                            </TableCell>
                            <TableCell>{formatDate(task.dueDate)}</TableCell>
                            <TableCell>
                              <IconButton size="small">
                                <Edit />
                              </IconButton>
                              <IconButton size="small">
                                <Delete />
                              </IconButton>
                            </TableCell>
                          </TableRow>
                        ))}
                      </TableBody>
                    </Table>
                  </TableContainer>
                </CardContent>
              </Card>
            </Grid>
          ) : (
            <Grid item xs={12}>
              <Alert severity="info">
                Please select a crop from the Overview or Crop Details tab to manage tasks.
              </Alert>
            </Grid>
          )}
        </Grid>
      </TabPanel>

      {/* Worker Management Tab */}
      <TabPanel value={tabValue} index={3}>
        <Grid container spacing={3}>
          <Grid item xs={12}>
            <Typography variant="h6" gutterBottom>
              Worker Assignments
            </Typography>
          </Grid>

          {selectedCrop ? (
            <>
              <Grid item xs={12}>
                <Card>
                  <CardContent>
                    <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center', mb: 2 }}>
                      <Typography variant="h6">
                        Workers for {selectedCrop.name}
                      </Typography>
                      <Button
                        variant="contained"
                        startIcon={<Add />}
                        onClick={() => setWorkerDialogOpen(true)}
                      >
                        Assign Worker
                      </Button>
                    </Box>

                    <Grid container spacing={2}>
                      {selectedCrop.assignedWorkers.map((worker) => (
                        <Grid item xs={12} sm={6} md={4} key={worker.id}>
                          <Card variant="outlined">
                            <CardContent>
                              <Box sx={{ display: 'flex', alignItems: 'center', mb: 2 }}>
                                <Avatar sx={{ mr: 2 }}>
                                  {worker.workerName.charAt(0)}
                                </Avatar>
                                <Box>
                                  <Typography variant="h6">{worker.workerName}</Typography>
                                  <Typography variant="caption" color="text.secondary">
                                    {worker.role}
                                  </Typography>
                                </Box>
                              </Box>

                              <Typography variant="body2" gutterBottom>
                                <strong>Responsibilities:</strong>
                              </Typography>
                              <ul style={{ margin: 0, paddingLeft: '20px' }}>
                                {worker.responsibilities.map((resp, index) => (
                                  <li key={index}>
                                    <Typography variant="caption">{resp}</Typography>
                                  </li>
                                ))}
                              </ul>

                              <Box sx={{ mt: 2 }}>
                                <Typography variant="body2" gutterBottom>
                                  Performance Metrics:
                                </Typography>
                                <Typography variant="caption" display="block">
                                  Efficiency: {worker.performance.efficiency}%
                                </Typography>
                                <Typography variant="caption" display="block">
                                  Quality Score: {worker.performance.qualityScore}%
                                </Typography>
                                <Typography variant="caption" display="block">
                                  Tasks Completed: {worker.performance.tasksCompleted}
                                </Typography>
                              </Box>

                              <Box sx={{ mt: 2, display: 'flex', justifyContent: 'space-between' }}>
                                <Button size="small" startIcon={<Edit />}>
                                  Edit
                                </Button>
                                <Button size="small" color="error" startIcon={<Delete />}>
                                  Remove
                                </Button>
                              </Box>
                            </CardContent>
                          </Card>
                        </Grid>
                      ))}
                    </Grid>
                  </CardContent>
                </Card>
              </Grid>
            </>
          ) : (
            <Grid item xs={12}>
              <Alert severity="info">
                Please select a crop to view and manage worker assignments.
              </Alert>
            </Grid>
          )}
        </Grid>
      </TabPanel>

      {/* Analytics Tab */}
      <TabPanel value={tabValue} index={4}>
        <Grid container spacing={3}>
          {/* Yield Trend */}
          <Grid item xs={12} md={6}>
            <Card>
              <CardContent>
                <Typography variant="h6" gutterBottom>
                  Yield Trend (Tons)
                </Typography>
                <ResponsiveContainer width="100%" height={300}>
                  <LineChart data={yieldTrendData}>
                    <CartesianGrid strokeDasharray="3 3" />
                    <XAxis dataKey="month" />
                    <YAxis />
                    <RechartsTooltip />
                    <Line type="monotone" dataKey="yield" stroke="#8884d8" strokeWidth={2} />
                  </LineChart>
                </ResponsiveContainer>
              </CardContent>
            </Card>
          </Grid>

          {/* Profit vs Cost */}
          <Grid item xs={12} md={6}>
            <Card>
              <CardContent>
                <Typography variant="h6" gutterBottom>
                  Financial Performance
                </Typography>
                <ResponsiveContainer width="100%" height={300}>
                  <RechartsBarChart data={profitTrendData}>
                    <CartesianGrid strokeDasharray="3 3" />
                    <XAxis dataKey="month" />
                    <YAxis />
                    <RechartsTooltip />
                    <Legend />
                    <Bar dataKey="revenue" fill="#4CAF50" name="Revenue" />
                    <Bar dataKey="cost" fill="#FF5722" name="Cost" />
                    <Bar dataKey="profit" fill="#2196F3" name="Profit" />
                  </RechartsBarChart>
                </ResponsiveContainer>
              </CardContent>
            </Card>
          </Grid>

          {/* Performance Metrics */}
          <Grid item xs={12}>
            <Card>
              <CardContent>
                <Typography variant="h6" gutterBottom>
                  Performance Metrics
                </Typography>
                <Grid container spacing={3}>
                  <Grid item xs={12} sm={6} md={3}>
                    <Box textAlign="center">
                      <Typography variant="h4" color="primary">
                        {analytics?.productivity.workHoursPerHectare.toFixed(1) || 0}
                      </Typography>
                      <Typography variant="caption" color="text.secondary">
                        Work Hours per Hectare
                      </Typography>
                    </Box>
                  </Grid>
                  <Grid item xs={12} sm={6} md={3}>
                    <Box textAlign="center">
                      <Typography variant="h4" color="success.main">
                        {analytics?.productivity.yieldPerWorkerHour.toFixed(1) || 0}
                      </Typography>
                      <Typography variant="caption" color="text.secondary">
                        Yield per Worker Hour (kg)
                      </Typography>
                    </Box>
                  </Grid>
                  <Grid item xs={12} sm={6} md={3}>
                    <Box textAlign="center">
                      <Typography variant="h4" color="warning.main">
                        ${analytics?.productivity.costPerKg.toFixed(2) || 0}
                      </Typography>
                      <Typography variant="caption" color="text.secondary">
                        Cost per Kg
                      </Typography>
                    </Box>
                  </Grid>
                  <Grid item xs={12} sm={6} md={3}>
                    <Box textAlign="center">
                      <Typography variant="h4" color="info.main">
                        ${analytics?.productivity.revenuePerHectare.toFixed(0) || 0}
                      </Typography>
                      <Typography variant="caption" color="text.secondary">
                        Revenue per Hectare
                      </Typography>
                    </Box>
                  </Grid>
                </Grid>
              </CardContent>
            </Card>
          </Grid>

          {/* Top Performing Crops */}
          <Grid item xs={12} md={6}>
            <Card>
              <CardContent>
                <Typography variant="h6" gutterBottom>
                  Top Performing Crops
                </Typography>
                <List>
                  {analytics?.topPerformingCrops.map((crop, index) => (
                    <ListItem key={crop.cropId}>
                      <ListItemAvatar>
                        <Avatar sx={{ bgcolor: COLORS[index % COLORS.length] }}>
                          {index + 1}
                        </Avatar>
                      </ListItemAvatar>
                      <ListItemText
                        primary={crop.name}
                        secondary={`Yield: ${(crop.yield / 1000).toFixed(1)}t • ROI: ${crop.roi.toFixed(1)}%`}
                      />
                      <ListItemSecondaryAction>
                        <Typography variant="h6" color="success.main">
                          {formatCurrency(crop.profit)}
                        </Typography>
                      </ListItemSecondaryAction>
                    </ListItem>
                  ))}
                </List>
              </CardContent>
            </Card>
          </Grid>

          {/* Worker Performance */}
          <Grid item xs={12} md={6}>
            <Card>
              <CardContent>
                <Typography variant="h6" gutterBottom>
                  Worker Performance
                </Typography>
                <List>
                  {analytics?.workerPerformance.map((worker, index) => (
                    <ListItem key={worker.workerId}>
                      <ListItemAvatar>
                        <Avatar>{worker.name.charAt(0)}</Avatar>
                      </ListItemAvatar>
                      <ListItemText
                        primary={worker.name}
                        secondary={`Tasks: ${worker.tasksCompleted} • Quality: ${worker.averageQuality}%`}
                      />
                      <ListItemSecondaryAction>
                        <Typography variant="body2" color="primary">
                          {worker.efficiency}% Efficiency
                        </Typography>
                      </ListItemSecondaryAction>
                    </ListItem>
                  ))}
                </List>
              </CardContent>
            </Card>
          </Grid>
        </Grid>
      </TabPanel>

      {/* Harvest Planning Tab */}
      <TabPanel value={tabValue} index={5}>
        <Grid container spacing={3}>
          <Grid item xs={12}>
            <Typography variant="h6" gutterBottom>
              Harvest Planning & Scheduling
            </Typography>
          </Grid>

          {/* Upcoming Harvests */}
          <Grid item xs={12} md={8}>
            <Card>
              <CardContent>
                <Typography variant="h6" gutterBottom>
                  Upcoming Harvests
                </Typography>
                <TableContainer>
                  <Table>
                    <TableHead>
                      <TableRow>
                        <TableCell>Crop</TableCell>
                        <TableCell>Expected Date</TableCell>
                        <TableCell>Estimated Yield</TableCell>
                        <TableCell>Workers Required</TableCell>
                        <TableCell>Status</TableCell>
                        <TableCell>Actions</TableCell>
                      </TableRow>
                    </TableHead>
                    <TableBody>
                      {crops
                        .filter(crop => ['fruiting', 'maturation'].includes(crop.stage.current))
                        .map((crop) => (
                          <TableRow key={crop.id}>
                            <TableCell>
                              <Typography variant="subtitle2">{crop.name}</Typography>
                              <Typography variant="caption" color="text.secondary">
                                {crop.fieldLocation}
                              </Typography>
                            </TableCell>
                            <TableCell>{formatDate(crop.expectedHarvestDate)}</TableCell>
                            <TableCell>
                              {((crop.varietyInfo.yieldPotential * crop.area) / 1000).toFixed(1)} tons
                            </TableCell>
                            <TableCell>{crop.assignedWorkers.length}</TableCell>
                            <TableCell>
                              <Chip
                                label={crop.stage.current}
                                size="small"
                                sx={{ bgcolor: getStageColor(crop.stage.current), color: 'white' }}
                              />
                            </TableCell>
                            <TableCell>
                              <Button size="small" variant="outlined">
                                Schedule
                              </Button>
                            </TableCell>
                          </TableRow>
                        ))}
                    </TableBody>
                  </Table>
                </TableContainer>
              </CardContent>
            </Card>
          </Grid>

          {/* Harvest Calendar */}
          <Grid item xs={12} md={4}>
            <Card>
              <CardContent>
                <Typography variant="h6" gutterBottom>
                  Harvest Calendar
                </Typography>
                <Typography variant="body2" color="text.secondary" gutterBottom>
                  Quick overview of harvest timing
                </Typography>
                
                {crops.map((crop) => (
                  <Box key={crop.id} sx={{ mb: 2, p: 2, border: '1px solid', borderColor: 'grey.300', borderRadius: 1 }}>
                    <Typography variant="subtitle2">{crop.name}</Typography>
                    <Typography variant="caption" color="text.secondary">
                      Expected: {formatDate(crop.expectedHarvestDate)}
                    </Typography>
                    <LinearProgress
                      variant="determinate"
                      value={crop.growthProgress}
                      sx={{ mt: 1 }}
                    />
                  </Box>
                ))}
              </CardContent>
            </Card>
          </Grid>
        </Grid>
      </TabPanel>

      {/* Dialogs */}
      
      {/* Add Crop Dialog */}
      <Dialog open={dialogOpen} onClose={() => setDialogOpen(false)} maxWidth="sm" fullWidth>
        <DialogTitle>Add New Crop</DialogTitle>
        <DialogContent>
          <Grid container spacing={2} sx={{ mt: 1 }}>
            <Grid item xs={12} sm={6}>
              <TextField
                fullWidth
                label="Crop Name"
                value={cropForm.name}
                onChange={(e) => setCropForm({...cropForm, name: e.target.value})}
              />
            </Grid>
            <Grid item xs={12} sm={6}>
              <TextField
                fullWidth
                label="Variety"
                value={cropForm.variety}
                onChange={(e) => setCropForm({...cropForm, variety: e.target.value})}
              />
            </Grid>
            <Grid item xs={12} sm={6}>
              <FormControl fullWidth>
                <InputLabel>Category</InputLabel>
                <Select
                  value={cropForm.category}
                  onChange={(e) => setCropForm({...cropForm, category: e.target.value as any})}
                >
                  <MenuItem value="vegetables">Vegetables</MenuItem>
                  <MenuItem value="fruits">Fruits</MenuItem>
                  <MenuItem value="grains">Grains</MenuItem>
                  <MenuItem value="herbs">Herbs</MenuItem>
                  <MenuItem value="legumes">Legumes</MenuItem>
                  <MenuItem value="flowers">Flowers</MenuItem>
                </Select>
              </FormControl>
            </Grid>
            <Grid item xs={12} sm={6}>
              <TextField
                fullWidth
                label="Field Location"
                value={cropForm.fieldLocation}
                onChange={(e) => setCropForm({...cropForm, fieldLocation: e.target.value})}
              />
            </Grid>
            <Grid item xs={12} sm={6}>
              <TextField
                fullWidth
                label="Area (hectares)"
                type="number"
                value={cropForm.area}
                onChange={(e) => setCropForm({...cropForm, area: e.target.value})}
              />
            </Grid>
            <Grid item xs={12} sm={6}>
              <TextField
                fullWidth
                label="Soil Type"
                value={cropForm.soilType}
                onChange={(e) => setCropForm({...cropForm, soilType: e.target.value})}
              />
            </Grid>
            <Grid item xs={12} sm={6}>
              <TextField
                fullWidth
                label="Planting Date"
                type="date"
                value={cropForm.plantingDate}
                onChange={(e) => setCropForm({...cropForm, plantingDate: e.target.value})}
                InputLabelProps={{ shrink: true }}
              />
            </Grid>
            <Grid item xs={12} sm={6}>
              <TextField
                fullWidth
                label="Expected Harvest Date"
                type="date"
                value={cropForm.expectedHarvestDate}
                onChange={(e) => setCropForm({...cropForm, expectedHarvestDate: e.target.value})}
                InputLabelProps={{ shrink: true }}
              />
            </Grid>
          </Grid>
        </DialogContent>
        <DialogActions>
          <Button onClick={() => setDialogOpen(false)}>Cancel</Button>
          <Button onClick={handleCreateCrop} variant="contained">
            Create Crop
          </Button>
        </DialogActions>
      </Dialog>

      {/* Context Menu */}
      <Menu
        anchorEl={menuAnchor}
        open={Boolean(menuAnchor)}
        onClose={() => setMenuAnchor(null)}
      >
        <MenuItem onClick={() => {
          const crop = crops.find(c => c.id === selectedCropForMenu);
          if (crop) handleCropSelect(crop);
          setMenuAnchor(null);
        }}>
          <Visibility sx={{ mr: 1 }} />
          View Details
        </MenuItem>
        <MenuItem onClick={() => setMenuAnchor(null)}>
          <Edit sx={{ mr: 1 }} />
          Edit Crop
        </MenuItem>
        <MenuItem onClick={() => setMenuAnchor(null)}>
          <PhotoCamera sx={{ mr: 1 }} />
          Add Photos
        </MenuItem>
        <MenuItem onClick={() => setMenuAnchor(null)} sx={{ color: 'error.main' }}>
          <Delete sx={{ mr: 1 }} />
          Delete Crop
        </MenuItem>
      </Menu>

      {/* Floating Action Button */}
      <Fab
        color="primary"
        aria-label="add"
        sx={{ position: 'fixed', bottom: 16, right: 16 }}
        onClick={() => setDialogOpen(true)}
      >
        <Add />
      </Fab>
    </Box>
  );
};

export default EnhancedCropManagementDashboard;